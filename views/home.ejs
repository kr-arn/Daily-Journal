<%- include("partial/header") -%>


<h1>Home</h1>
<p><%= homeStartingContent %></p>
<% posts.forEach(post => { %>
    <div >
        
        <h2><%= post.title %></h2>
        <% if (post.content.length <100) { %>
            <p>
                <%= post.content %>
                <a href="/post/<%= post._id %>">Read More...</a>
            </p>         
        <% } else { %>
            <p>
                <%= post.content.substring(0,100)+"..." %>
                <a href="/post/<%= post._id %> ">Read More...</a>
            </p>
            <% } %>
         
        
    </div>
    
    <% }); %>

<%- include("partial/footer") -%>